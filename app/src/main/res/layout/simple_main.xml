<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <jerome.com.usbcamera.utils.FaceDetectView
        android:id="@+id/detect_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="70px" />

    <ImageView
        android:id="@+id/border"
        android:layout_width="500px"
        android:layout_height="500px"
        android:src="@drawable/border" />

    <ImageView
        android:id="@+id/black_screen"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@android:color/black"
        android:visibility="visible" />

    <ImageView
        android:id="@+id/bg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="-50px"
        android:layout_marginTop="50px"
        android:scaleType="centerCrop"
        android:src="@drawable/ui" />

    <ImageView
        android:id="@+id/img_matched"
        android:layout_width="200px"
        android:layout_height="160px"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="33px"
        android:layout_marginLeft="153px"
        android:scaleType="fitXY"
        android:src="@drawable/nobody" />

    <ImageView
        android:id="@+id/img_certificate"
        android:layout_width="350px"
        android:layout_height="160px"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="33px"
        android:layout_marginRight="143px"
        android:scaleType="fitXY"
        android:src="@drawable/nobody" />

    <ImageButton
        android:id="@+id/btn_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="30px"
        android:layout_marginLeft="30px"
        android:src="@drawable/btn_shutter_photo_pressed" />

    <TextView
        android:id="@+id/text_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="textEnd"
        android:textColor="@android:color/white"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:textSize="15sp" />

    <ImageButton
        android:id="@+id/btn_reg_face"
        android:layout_width="200px"
        android:layout_height="200px"
        android:layout_alignStart="@+id/img_matched"
        android:layout_alignTop="@+id/img_matched"
        android:background="@null" />

    <ImageButton
        android:id="@+id/btn_reg_card"
        android:layout_width="350px"
        android:layout_height="200px"
        android:layout_alignStart="@+id/img_certificate"
        android:layout_alignTop="@+id/img_certificate"
        android:background="@null" />

    <ImageButton
        android:id="@+id/btn_gm"
        android:layout_width="200px"
        android:layout_height="200px"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@null" />

    <ImageView
        android:id="@+id/passed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:src="@drawable/passed" />

</RelativeLayout>