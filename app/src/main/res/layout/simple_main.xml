<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <jerome.com.usbcamera.FaceDetectView
        android:id="@+id/detect_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <ImageView
        android:id="@+id/img_certificate"
        android:layout_width="336px"
        android:layout_height="216px"
        android:layout_marginLeft="30px"
        android:layout_marginTop="30px"
        android:scaleType="fitXY"
        android:src="@drawable/nobody" />

    <ImageView
        android:id="@+id/img_matched"
        android:layout_width="200px"
        android:layout_height="200px"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/img_certificate"
        android:layout_marginEnd="30px"
        android:src="@drawable/nobody" />

    <ImageButton
        android:id="@+id/btn_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/img_certificate"
        android:layout_marginBottom="30px"
        android:src="@drawable/btn_shutter_photo_pressed" />

    <TextView
        android:id="@+id/text_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/btn_register"
        android:layout_alignEnd="@+id/img_matched"
        android:textAlignment="textEnd"
        android:textColor="@android:color/white"
        android:textSize="15sp" />
</RelativeLayout>